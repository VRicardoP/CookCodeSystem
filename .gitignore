/ecommerce/wp-content/uploads/
/ecommerce/wp-content/blogs.dir/

# Archivos de caché y copias de seguridad
/ecommerce/wp-content/cache/
/ecommerce/wp-content/backup-db/
/ecommerce/wp-content/upgrade/
/ecommerce/wp-content/advanced-cache.php
/ecommerce/wp-content/wp-cache-config.php

